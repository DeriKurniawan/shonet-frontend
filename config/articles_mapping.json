{
  "settings": {
    "index": {
      "analysis": {
        "filter": {},

        "analyzer": {
          "keyword_analyzer": {
            "filter": ["lowercase", "asciifolding", "trim"],
            "char_filter": [],
            "type": "custom",
            "tokenizer": "keyword"
          },

          "edge_ngram_analyzer": {
            "filter": ["lowercase"],
            "tokenizer": "edge_ngram_tokenizer"
          },

          "edge_ngram_search_analyzer": {
            "tokenizer": "lowercase"
          }
        },

        "tokenizer": {
          "edge_ngram_tokenizer": {
            "type": "edge_ngram",
            "min_gram": 2,
            "max-gram": 5,
            "token_chars": ["letter"]
          }
        }
      }
    }
  },

  "mappings": {
    "articles": {
      "dynamic": "strict",
      "properties": {
        "id": {"type": "integer"},
        "title": {
          "type": "text",
          "fielddata": true,
          "fields": {
            "keywordstring": {
              "type": "text",
              "analyzer": "keyword_analyzer"
            },
            "edgengram": {
              "type": "text",
              "analyzer": "edge_ngram_analyzer",
              "search_analyzer": "edge_ngram_search_analyzer"
            },
            "completion": {
              "type": "completion"
            }
          }
        },

        "slug": {"type": "text", "fielddata": true},
        "permalink": {"type": "text"},
        "content": {"type": "text", "fielddata": true},
        "image": {"type": "text"},
        "image_source": {"type": "text"},
        "seo_keyword": {"type": "text"},
        "type": {"type": "text", "fielddata": true},
        "status": {"type": "text", "fielddata": true},
        "request_publish_date": {"type": "date", "format": "yyyy-MM-dd HH:mm:ss", "null_value": "NULL"},
        "publish_date": {"type": "date", "format": "yyyy-MM-dd HH:mm:ss", "null_value": "NULL"},

        "writer": {
          "properties": {
            "id": {"type": "integer"},
            "name": {"type": "text", "fielddata": true},
            "photo": {"type": "text"}
          }
        },

        "editor": {
          "properties": {
            "id": {"type": "integer"},
            "name": {"type": "text", "fielddata": true},
            "photo": {"type": "text"}
          }
        },

        "created_at": {"type": "date", "format": "yyyy-MM-dd HH:mm:ss", "null_value": "NULL"},
        "content_manipulation": {"type": "text", "fielddata": true},
        "tags": {
          "properties": {
            "id": {"type": "integer"},
            "title": {"type": "text", "fielddata": true}
          }
        },

        "categories": {
          "properties": {
            "id": {"type": "integer"},
            "title": {"type": "text", "fielddata": true}
          }
        },

        "products": {
          "properties": {
            "id": {"type": "integer"},
            "name": {"type": "text", "fielddata": true},
            "thumbnail": {"type": "text"},
            "site_url": {"type": "text"},
            "brand": {
              "properties": {
                "id": {"type": "integer"},
                "name": {"type": "text", "fielddata": true}
              }
            },
            "price": {"type": "float"}
          }
        }
      }
    }
  }
}